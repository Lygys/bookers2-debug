<%= form_with(model: @search, url:search_path, method: :get, local: true) do |f| %>
  <%= f.text_field :content,  value: @search_params[:content] %>
  <%= f.select :model, value: @search_params[:model], options_for_select{ "book" => "book", "user" => "user"}, { include_blank: true, { class: 'form-control' , required: true } %>
  <%= f.select :method, value: @search_params[:method], options_for_select{"完全一致": perfect, "部分一致": partial, "前方一致": forward, "後方一致": backward}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
  <%= f.submit '検索' %>
<% end %>
